.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: white;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.refresh-btn {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  background: #007aff;
  color: white;
  border-radius: 6rpx;
}

.status-overview {
  background: white;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.status-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.status-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.label {
  font-size: 30rpx;
  color: #666;
  font-weight: 500;
}

.value {
  font-size: 30rpx;
  font-weight: bold;
}

.value.success {
  color: #52c41a;
}

.value.error {
  color: #ff4d4f;
}

.value.small {
  font-size: 24rpx;
  max-width: 400rpx;
  word-break: break-all;
}

.test-results {
  background: white;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.test-item {
  margin-bottom: 25rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border-left: 4rpx solid #007aff;
}

.test-item:last-child {
  margin-bottom: 0;
}

.test-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.test-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.test-result {
  font-size: 26rpx;
  font-weight: bold;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.test-result.success {
  background: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #b7eb8f;
}

.test-result.error {
  background: #fff2f0;
  color: #ff4d4f;
  border: 1rpx solid #ffccc7;
}

.test-data {
  margin-top: 10rpx;
}

.data-label {
  font-size: 24rpx;
  color: #666;
  margin-right: 10rpx;
}

.data-content {
  font-size: 24rpx;
  color: #333;
  word-break: break-all;
  background: white;
  padding: 8rpx 12rpx;
  border-radius: 4rpx;
  border: 1rpx solid #d9d9d9;
}

.actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  padding: 25rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
  font-weight: 500;
}

.action-btn.primary {
  background: #007aff;
  color: white;
}

.action-btn.secondary {
  background: #52c41a;
  color: white;
}

.action-btn.danger {
  background: #ff4d4f;
  color: white;
}

.info {
  background: white;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.info-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.info-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}