/* 详情页样式 */
.title { font-size: 34rpx; font-weight: 700; }
.meta { margin-top: 8rpx; font-size: 24rpx; color:#999; }
.title-row { display:flex; justify-content: space-between; align-items: center; }
.section { margin-top: 24rpx; }
.section-title { font-size: 28rpx; font-weight: 600; margin-bottom: 10rpx; }
.content { color:#444; line-height: 1.7; }
.actions { position: fixed; left: 24rpx; right: 24rpx; bottom: 24rpx; display:flex; gap: 16rpx; flex-wrap: wrap; }
button.apply-task { flex:1; background:#52c41a; color:#fff; border-radius: 12rpx; }
button.primary { flex:1; background:#1677ff; color:#fff; border-radius: 12rpx; }
button.debug-btn { width: 100%; background:#ff9800; color:#fff; border-radius: 12rpx; margin-top: 16rpx; }
button { flex:1; border-radius: 12rpx; }

/* 信息卡片圆角与阴影统一 */
.section { background:#fff; border-radius: 18rpx; box-shadow: 0 10rpx 22rpx rgba(0,0,0,0.05); padding: 24rpx; margin-bottom: 22rpx; }

/* 底部操作按钮对齐样式 */
.action-row { display:flex; justify-content: flex-start; padding: 12rpx 0 40rpx; }
.action-row button { flex: none; }

/* 底部头像与地区行 */
.footer-row { display:flex; justify-content: space-between; align-items: center; padding: 24rpx; background:#fff; border-radius: 18rpx; box-shadow: 0 10rpx 22rpx rgba(0,0,0,0.05); margin: 0 24rpx 22rpx; }
.publisher { display:flex; align-items:center; gap: 10rpx; color:#444; }
.avatar-img { width: 48rpx; height: 48rpx; border-radius: 50%; background:#eee; }
.avatar-fallback { width: 48rpx; height: 48rpx; border-radius: 50%; background:#eee; display:flex; align-items:center; justify-content:center; font-size: 28rpx; }
.region { color:#666; font-size: 24rpx; }