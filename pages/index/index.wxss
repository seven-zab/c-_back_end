/* 首页样式（回归正常配色） */

/* 大字版切换按钮 */
.font-toggle-container {
  position: fixed;
  top: 100rpx;
  right: 30rpx;
  z-index: 1000;
}

/* 底部大字版按钮 */
.font-toggle-container.bottom {
  position: relative;
  top: auto;
  right: auto;
  display: flex;
  justify-content: center;
  margin: 40rpx 0 20rpx 0;
  z-index: auto;
}

.font-toggle-btn {
  background: #1677ff;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 16rpx 24rpx;
  font-size: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.3);
}

.font-toggle-btn:active {
  transform: scale(0.95);
}

/* 大字版样式 */
.large-font .banner-title {
  font-size: 36rpx !important;
}

.large-font .search-input {
  font-size: 32rpx !important;
}

.large-font .latest-tip {
  font-size: 28rpx !important;
}

.large-font .module-title {
  font-size: 34rpx !important;
}

.large-font .module-desc {
  font-size: 26rpx !important;
}

.large-font .module-icon {
  width: 120rpx !important;
  height: 120rpx !important;
  line-height: 120rpx !important;
  font-size: 56rpx !important;
}

.large-font .module-item {
  padding: 32rpx 16rpx !important;
}

.hero { position: relative; padding: 24rpx; border-radius: 28rpx; background: #fff; box-shadow: 0 12rpx 26rpx rgba(0,0,0,0.06); }
.hero::before { display:none; }
.banner-card {
  padding: 0;
  overflow: hidden;
}
.banner-swiper {
  width: 100%;
  height: 360rpx;
  border-radius: 20rpx;
}
.banner-img {
  width: 100%; height: 100%; border-radius: 20rpx;
}
.banner-mask {
  position: absolute; left: 0; right: 0; bottom: 0; height: 120rpx;
  background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.35) 100%);
  border-bottom-left-radius: 20rpx; border-bottom-right-radius: 20rpx;
}
.banner-title {
  position: absolute; left: 24rpx; bottom: 20rpx; right: 24rpx; color: #fff;
  font-size: 30rpx; font-weight: 600; text-shadow: 0 4rpx 10rpx rgba(0,0,0,0.3);
}

.search-area { margin-top: 18rpx; padding-bottom: 6rpx; }
.search-bar { display:flex; align-items:center; padding: 18rpx 22rpx; border-radius: 999rpx; }
.search-icon { font-size: 28rpx; margin-right: 12rpx; }
.search-input { flex:1; color: #666; font-size: 26rpx; }
.latest-tip { margin-top: 12rpx; display:flex; align-items:center; color:#999; font-size: 24rpx; }
.tip-dot { width: 10rpx; height:10rpx; background:#52c41a; border-radius:50%; margin-right: 10rpx; display:inline-block; }

/* 搜索栏正常态 */
.glass { background: #fff; box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.06); }

/* 三大模块 */
.module-grid { margin-top: 28rpx; display:grid; grid-template-columns: repeat(3, 1fr); grid-gap: 18rpx; }
.module-item { padding: 26rpx 12rpx; text-align:center; transition: transform .12s ease, box-shadow .12s ease; }
.module-item:active { transform: translateY(2rpx) scale(0.98); box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.06); }
.module-icon { width: 100rpx; height: 100rpx; line-height:100rpx; margin: 0 auto 10rpx; border-radius: 30rpx; font-size: 46rpx; box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.06); }
