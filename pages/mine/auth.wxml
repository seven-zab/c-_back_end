<view class="container auth">
  <view class="card">
    <text class="title">手机号验证码登录</text>
    <button open-type="getPhoneNumber" bindgetphonenumber="onGetPhoneNumber">微信授权手机号（系统弹窗）</button>
    <view class="divider"></view>
    <view class="sms-form">
      <input class="input" type="number" maxlength="11" placeholder="请输入手机号" value="{{phone}}" bindinput="onPhoneInput"/>
      <view class="code-row">
        <input class="input" type="number" maxlength="6" placeholder="请输入验证码" value="{{code}}" bindinput="onCodeInput"/>
        <button class="sec-btn" bindtap="sendCode" disabled="{{sending || countdown>0}}">{{countdown>0?countdown+'s':'获取验证码'}}</button>
      </view>
      <button class="primary-btn" bindtap="verifyCode">手机号+验证码登录</button>
      <text class="tip">提示：未配置短信服务时，验证码仅写库便于联调</text>
    </view>
  </view>
</view>