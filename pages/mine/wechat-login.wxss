/* 页面容器 */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.test-area {
  text-align: center;
}

.trigger-btn {
  background: #1677ff;
  color: #fff;
  border-radius: 8rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
}

/* 背景遮罩 */
.auth-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

/* 底部弹出框 */
.auth-popup {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  z-index: 1001;
  transform: translateY(100%);
  transition: transform 0.3s ease-out;
  max-height: 80vh;
  overflow: hidden;
}

.auth-popup.show {
  transform: translateY(0);
}

/* 顶部应用信息 */
.popup-header {
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1px solid #f0f0f0;
}

.app-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.app-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
}

.app-name {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.info-icon {
  width: 40rpx;
  height: 40rpx;
  background: #f0f0f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #999;
}

/* 授权内容 */
.popup-content {
  padding: 48rpx 32rpx;
  text-align: center;
}

.auth-title {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.auth-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
}

.user-preview {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 48rpx;
  position: relative;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #f0f0f0;
}

.nickname {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.checkmark {
  position: absolute;
  top: -8rpx;
  right: calc(50% - 60rpx);
  width: 36rpx;
  height: 36rpx;
  background: #07c160;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  border: 3rpx solid #fff;
}

.auth-description {
  font-size: 28rpx;
  color: #576b95;
  text-decoration: underline;
}

/* 获取信息按钮 */
.get-info-btn {
  width: 100%;
  background: #1677ff;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 40rpx;
  transition: all 0.2s ease;
}

.get-info-btn:disabled {
  background: #a8c8ff;
  color: #fff;
}

.get-info-btn:active:not(:disabled) {
  background: #0958d9;
  transform: scale(0.98);
}

/* 用户信息显示区域 */
.user-info-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
  position: relative;
}

.avatar-button {
  background: transparent;
  border: none;
  padding: 0;
  margin-bottom: 20rpx;
}

.nickname-input {
  width: 300rpx;
  height: 60rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
}

/* 底部按钮 */
.popup-actions {
  padding: 24rpx 32rpx 48rpx;
  display: flex;
  gap: 24rpx;
  background: #fff;
}

.reject-btn {
  flex: 1;
  background: #f2f2f2;
  color: #333;
  border: none;
  border-radius: 12rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.reject-btn:disabled {
  background: #e8e8e8;
  color: #999;
}

.allow-btn {
  flex: 1;
  background: #07c160;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.allow-btn:disabled {
  background: #a8d8a8;
  color: #fff;
}

.allow-btn:active:not(:disabled) {
  background: #06ad56;
  transform: scale(0.98);
}

.reject-btn:active:not(:disabled) {
  background: #e8e8e8;
  transform: scale(0.98);
}