/* pages/permission-management/permission-management.wxss */
.container {
  padding: 32rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 32rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.application-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.application-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 24rpx;
}

.user-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.openid {
  font-size: 24rpx;
  color: #999;
}

.application-info {
  margin-bottom: 24rpx;
}

.info-row {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.permission-type {
  color: #1677ff;
  font-weight: 600;
}

.reason {
  line-height: 1.5;
}

.time {
  color: #999;
}

.actions {
  display: flex;
  gap: 24rpx;
}

.action-btn {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  outline: none;
}

.approve-btn {
  background: linear-gradient(135deg, #10B981, #059669);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.3);
}

.reject-btn {
  background: linear-gradient(135deg, #EF4444, #DC2626);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.3);
}

.status {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.status-text {
  font-size: 28rpx;
  font-weight: 600;
}

.status-text.approved {
  color: #10B981;
}

.status-text.rejected {
  color: #EF4444;
}

.review-time {
  font-size: 24rpx;
  color: #999;
}

.empty-state {
  text-align: center;
  padding: 120rpx 0;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
}

.loading {
  text-align: center;
  padding: 120rpx 0;
  font-size: 32rpx;
  color: #999;
}