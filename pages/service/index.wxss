/* 客服主页样式 */
.grid { display:grid; grid-template-columns: repeat(2, 1fr); grid-gap: 20rpx; }
.grid-item { padding: 30rpx 20rpx; text-align:center; }
.grid-item .icon { font-size: 60rpx; }
.grid-item .title { margin-top: 12rpx; font-weight: 600; font-size: 30rpx; }
.grid-item .desc { color:#999; font-size: 22rpx; margin-top: 6rpx; }
.tip { margin-top: 20rpx; }
.tips { margin-top: 12rpx; display:flex; flex-wrap:wrap; gap: 16rpx; }
.tip { background:#f5f5f5; color:#555; padding: 10rpx 16rpx; border-radius: 999rpx; }