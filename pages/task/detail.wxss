.container {
  padding: 32rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 任务基本信息 */
.task-info {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.task-title {
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
}

.task-status {
  padding: 12rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-pending {
  background-color: #FEF3C7;
  color: #D97706;
}

.status-in_progress {
  background-color: #DBEAFE;
  color: #2563EB;
}

.status-completed {
  background-color: #D1FAE5;
  color: #059669;
}

.status-cancelled {
  background-color: #FEE2E2;
  color: #DC2626;
}

.task-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 32rpx;
}

.task-meta {
  border-top: 1rpx solid #E5E7EB;
  padding-top: 24rpx;
}

.meta-item {
  display: flex;
  margin-bottom: 16rpx;
}

.meta-item:last-child {
  margin-bottom: 0;
}

.meta-label {
  font-size: 26rpx;
  color: #999;
  width: 160rpx;
  flex-shrink: 0;
}

.meta-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

/* 时间线部分 */
.timeline-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 32rpx;
}

.timeline {
  position: relative;
}

.timeline-item {
  display: flex;
  margin-bottom: 40rpx;
  position: relative;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-item.pending .timeline-content {
  cursor: pointer;
}

/* 时间线节点 */
.timeline-node {
  position: relative;
  margin-right: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.node-dot {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 2;
}

.node-dot.completed {
  background-color: #10B981;
  border: 3rpx solid #10B981;
}

.node-dot.pending {
  background-color: white;
  border: 3rpx solid #D1D5DB;
}

.node-icon {
  color: white;
  font-size: 20rpx;
  font-weight: bold;
}

.node-line {
  width: 2rpx;
  background-color: #D1D5DB;
  flex: 1;
  margin-top: 8rpx;
  min-height: 60rpx;
}

.timeline-item.completed .node-line {
  background-color: #10B981;
}

/* 时间线内容 */
.timeline-content {
  flex: 1;
  padding: 8rpx 0;
}

.step-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.step-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.step-status {
  font-size: 24rpx;
}

.completed-text {
  color: #10B981;
  font-weight: 500;
}

.pending-text {
  color: #6B7280;
}

.step-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.step-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.step-action {
  padding: 16rpx 20rpx;
  background-color: #F3F4F6;
  border-radius: 12rpx;
  border: 2rpx dashed #D1D5DB;
}

.action-text {
  font-size: 24rpx;
  color: #6B7280;
  font-style: italic;
}

.timeline-item.pending:active .step-action {
  background-color: #E5E7EB;
}

/* 确认弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background-color: white;
  border-radius: 16rpx;
  width: 600rpx;
  max-width: 90vw;
  overflow: hidden;
}

.modal-header {
  padding: 32rpx 32rpx 16rpx;
  border-bottom: 1rpx solid #E5E7EB;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-body {
  padding: 32rpx;
}

.confirm-text {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.confirm-tip {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #E5E7EB;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  padding: 24rpx;
  font-size: 28rpx;
  border: none;
  background-color: transparent;
}

.cancel-btn {
  color: #6B7280;
  border-right: 1rpx solid #E5E7EB;
}

.confirm-btn {
  color: #2563EB;
  font-weight: 600;
}