.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

.error {
  text-align: center;
  padding: 100rpx 40rpx;
  background: white;
  border-radius: 20rpx;
}

.error-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 32rpx;
  color: #333;
}

.task-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 任务头部 */
.task-header {
  background: white;
  padding: 30rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.task-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.task-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.status-in_progress {
  background-color: #fff3cd;
  color: #856404;
}

.status-completed {
  background-color: #d4edda;
  color: #155724;
}

.status-cancelled {
  background-color: #f8d7da;
  color: #721c24;
}

/* 任务信息 */
.task-info {
  background: white;
  padding: 30rpx;
  border-radius: 20rpx;
}

.info-item {
  display: flex;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #666;
  min-width: 140rpx;
  flex-shrink: 0;
}

.value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

/* 时间线部分 */
.timeline-section {
  background: white;
  padding: 30rpx;
  border-radius: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.timeline {
  position: relative;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 40rpx;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background-color: #e9ecef;
}

.timeline-item {
  position: relative;
  display: flex;
  margin-bottom: 40rpx;
  cursor: pointer;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-item.completed .timeline-dot {
  background-color: #28a745;
  color: white;
}

.timeline-item.pending .timeline-dot {
  background-color: #6c757d;
  color: white;
}

.timeline-dot {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
  z-index: 1;
}

.icon {
  font-size: 32rpx;
}

.step-number {
  font-size: 28rpx;
}

.timeline-content {
  margin-left: 30rpx;
  flex: 1;
}

.step-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.step-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 10rpx;
}

.completed-time {
  font-size: 24rpx;
  color: #28a745;
}

.step-action {
  margin-top: 10rpx;
}

.action-hint {
  font-size: 24rpx;
  color: #007aff;
  padding: 8rpx 16rpx;
  background-color: #e3f2fd;
  border-radius: 20rpx;
}

/* 操作按钮 */
.action-section {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.btn {
  padding: 20rpx 40rpx;
  border-radius: 30rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
  min-width: 200rpx;
}

.btn-contact {
  background-color: #007aff;
  color: white;
}

.btn-cancel {
  background-color: #dc3545;
  color: white;
}

.btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 角色信息 */
.role-info {
  text-align: center;
}

.role-badge {
  display: inline-block;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: bold;
}

.role-badge.assignee {
  background-color: #d4edda;
  color: #155724;
}

.role-badge.publisher {
  background-color: #cce5ff;
  color: #004085;
}

.role-badge.observer {
  background-color: #f8f9fa;
  color: #6c757d;
}