.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.actions {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.btn {
  flex: 1;
  min-width: 200rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
  color: white;
}

.btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.btn.success {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.btn.secondary {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  color: #333;
}

.btn.info {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  color: #333;
}

.collections {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.collection-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.collection-item:last-child {
  border-bottom: none;
}

.collection-name {
  font-size: 28rpx;
  color: #333;
  font-family: monospace;
}

.collection-status {
  font-size: 26rpx;
  font-weight: bold;
}

.collection-status.exists {
  color: #52c41a;
}

.collection-status.missing {
  color: #ff4d4f;
}

.logs {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.log-container {
  max-height: 600rpx;
  overflow-y: auto;
  background: #f8f9fa;
  border-radius: 10rpx;
  padding: 20rpx;
}

.log-item {
  margin-bottom: 10rpx;
  padding: 10rpx;
  background: white;
  border-radius: 8rpx;
  border-left: 4rpx solid #1890ff;
}

.log-text {
  font-size: 24rpx;
  color: #333;
  font-family: monospace;
  word-break: break-all;
}

.empty-logs {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}