/* pages/test-permission/test-permission.wxss */
.container {
  padding: 32rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.retry-btn {
  background: linear-gradient(135deg, #1677ff, #0056d6);
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.retry-btn[disabled] {
  background: #ccc;
  color: #999;
}

.test-results {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.test-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.test-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.test-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.test-status {
  font-size: 32rpx;
  font-weight: bold;
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.test-status.success {
  background: #10B981;
}

.test-status.error {
  background: #EF4444;
}

.test-message {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  word-break: break-all;
}

.loading {
  text-align: center;
  padding: 120rpx 0;
  font-size: 32rpx;
  color: #999;
}

.instructions {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.instruction-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 24rpx;
}

.instruction-text {
  font-size: 28rpx;
  color: #666;
  line-height: 2;
  display: block;
  margin-bottom: 8rpx;
}