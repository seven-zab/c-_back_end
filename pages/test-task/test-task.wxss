.container {
  padding: 32rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面头部 */
.header {
  text-align: center;
  margin-bottom: 48rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: #666;
}

/* 按钮组 */
.button-group {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.test-btn {
  padding: 32rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease;
}

.test-btn:active {
  transform: scale(0.98);
}

.test-btn[disabled] {
  opacity: 0.6;
  transform: none !important;
}

.delivery-btn {
  background: linear-gradient(135deg, #667EEA, #764BA2);
}

.general-btn {
  background: linear-gradient(135deg, #f093fb, #f5576c);
}

.list-btn {
  background: linear-gradient(135deg, #4facfe, #00f2fe);
}

/* 结果显示 */
.result-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.result-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.result-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  white-space: pre-line;
  margin-bottom: 24rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  border-left: 4rpx solid #10B981;
}

.clear-btn {
  background-color: #6B7280;
  color: white;
  font-size: 24rpx;
  padding: 16rpx 32rpx;
  border-radius: 20rpx;
  border: none;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 说明文档 */
.info-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.info-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.info-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}